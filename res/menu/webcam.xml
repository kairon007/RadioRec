<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:orientation="vertical" android:background="@drawable/bg_matterhorn"
	android:gravity="top">
		<ViewSwitcher android:layout_gravity="center"
		android:layout_height="wrap_content" android:layout_width="wrap_content"
		android:id="@+id/viewSwitcher_Webcam">
		<android.webkit.WebView android:clickable="false"
			android:longClickable="false" android:focusable="false"
			android:focusableInTouchMode="false" android:layout_gravity="center"
			android:id="@+id/webkitWebViewWebCam" android:layout_width="300dip"
			android:scrollbars="vertical" android:layout_height="fill_parent"/>
	</ViewSwitcher>
		<ImageView android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/imageViewReload" android:layout_gravity="center" android:src="@drawable/button_reload_32x32"></ImageView>
	<Button android:layout_margin="30dip" android:id="@+id/buttonZurueck"
		android:layout_height="wrap_content" android:layout_width="wrap_content"
		android:text="@string/zurueck" android:layout_gravity="left" />
	<TextView android:gravity="bottom" android:layout_width="wrap_content"
		android:text="@string/info_copyright" android:layout_gravity="center"
		android:id="@+id/textViewCopyright" android:layout_height="fill_parent" />

</LinearLayout>