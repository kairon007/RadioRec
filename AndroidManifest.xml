<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.rothconsulting.android.radiorec" android:versionCode="113"
	android:versionName="1.1.3" android:installLocation="auto">
	<uses-sdk android:minSdkVersion="4" />
	<supports-screens android:resizeable="true"
		android:smallScreens="true" android:normalScreens="true"
		android:largeScreens="true" android:anyDensity="true" />

	<!-- Required permission to use in-app billing. -->
	<uses-permission android:name="com.android.vending.BILLING" />

	<uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
	<uses-permission android:name="android.permission.WRITE_SETTINGS" />

	<application android:label="@string/app_name" android:icon="@drawable/jukebox">
		<activity android:name="com.rothconsulting.android.radiorec.RadioRecPlus"
			android:label="@string/app_name" android:configChanges="keyboard|keyboardHidden|orientation">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<activity android:name="com.google.ads.AdActivity"
			android:configChanges="keyboard|keyboardHidden|orientation" />
		<activity android:name=".Info" />
		<activity android:name=".Webcam" />
		<activity android:name=".Settings" />
		<activity android:name=".Donate" />
		<activity android:name=".Tabs" />
		<activity android:name=".TabCountry" />
		<activity android:name=".TabFavourites" />
		<activity android:name=".TabGenre" />
		<activity android:name="com.rothconsulting.android.marketbilling.MarketSpende" />

		<service android:name="com.rothconsulting.android.marketbilling.BillingService" />

		<receiver android:name="com.rothconsulting.android.marketbilling.BillingReceiver">
			<intent-filter>
				<action android:name="com.android.vending.billing.IN_APP_NOTIFY" />
				<action android:name="com.android.vending.billing.RESPONSE_CODE" />
				<action android:name="com.android.vending.billing.PURCHASE_STATE_CHANGED" />
			</intent-filter>
		</receiver>

	</application>
</manifest>

